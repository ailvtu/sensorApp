<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inbot.module.padbotsdksimple"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.inbot.module.padbotsdksimple.BluetoothScanActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inbot.module.padbotsdksimple.BluetoothControlActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <service
            android:name="com.inbot.module.padbotsdksimple.MessengerService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="edu.scut.dingo"></action>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>
    
    <!-- 蓝牙权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>
